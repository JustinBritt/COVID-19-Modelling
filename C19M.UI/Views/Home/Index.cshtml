<!-- https://stackoverflow.com/questions/44782688/chart-js-web-page-doesnt-display-chart-no-error-in-console -->
<div>
    <canvas id="canvas"></canvas>
</div>
<script>
    var stringArray = @Html.Raw(Json.Encode(ViewData["Labels"]));

    var canvas = document.getElementById('canvas');
    var ctx = canvas.getContext('2d');

    // https://stackoverflow.com/questions/48143233/how-to-plot-multiple-time-series-in-chartjs-where-each-time-series-has-different
    var s1 = {
        label: 's1',
        borderColor: 'blue',
        data: [
            { x: moment('2017-01-06'), y: 100 },
            { x: moment('2017-01-07'), y: 101 },
            { x: moment('2019-01-07'), y: 105 },
        ],
        tension: 0,
        showLine: true
    };

    var s2 = {
        label: 's2',
        borderColor: 'red',
        data: [
            { x: moment('2017-01-07'), y: 90 },
            { x: moment('2019-01-08'), y: 105 },
        ],
        tension: 0,
        showLine: true
    };

    var chart = new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [s1, s2]
        },
        options: {
            legend: false,
            responsive: true,
            tooltips: false,
            scales: {
                xAxes: [{
                    type: 'time',
                    display: true
                }]
            }
        }
    });
</script>

