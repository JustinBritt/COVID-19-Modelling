@model C19M.UI.Models.Gumel2004.HongKong

@{
    ViewBag.Title = "Hong Kong";
}

<head>
    <title>Line Chart</title>
    <script src="~/Scripts/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@1.15.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@0.2.0"></script>
    <script src="~/Scripts/utils.js"></script>
    <style>
        canvas {
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }
    </style>
</head>

<div>
    <canvas id="HongKong_Canvas"></canvas>
</div>
<script>
    function GenerateData(days, values) {
        let data = [];

        let i = 0;

        for (; i < days.length; i++) {
            data.push(
                {
                    x: luxon.DateTime.fromFormat(days[i], 'LLL dd yyyy').valueOf(),
                    y: values[i]
                });
        }

        return data;
    }
rTorontoArea_Context.canvas.height = 300;

    const HongKong_Context = document.getElementById('HongKong_Canvas').getContext('2d');
    HongKong_Context.canvas.width = 1000;
    HongKong_Context.canvas.height = 300;

    var HongKong_Days = @Html.Raw(Json.Encode(Model.Days));
    var HongKong_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.DayCumulativeDiseaseInducedDeaths_Array));
    var HongKong_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.DayCumulativeDiseaseInducedDeaths_Array));
    var HongKong_DayAsymptomaticIndividuals = @Html.Raw(Json.Encode(Model.DayAsymptomaticIndividuals_Array));
    var HongKong_DaySymptomaticIndividuals = @Html.Raw(Json.Encode(Model.DaySymptomaticIndividuals_Array));
    var HongKong_DayIsolatedIndividuals = @Html.Raw(Json.Encode(Model.DayIsolatedIndividuals_Array));
    var HongKong_DayQuarantinedIndividuals = @Html.Raw(Json.Encode(Model.DayQuarantinedIndividuals_Array));
    var HongKong_DayRecoveredIndividuals = @Html.Raw(Json.Encode(Model.DayRecoveredndividuals_Array));
    var HongKong_DaySusceptibleIndividuals = @Html.Raw(Json.Encode(Model.DaySusceptibleIndividuals_Array));

    const color = Chart.helpers.color;

    var HongKong_DayCumulativeDiseaseInducedDeaths_Dataset = {
        label: 'Hong Kong',
        backgroundColor: color(window.chartColors.red).alpha(0.5).rgbString(),
        borderColor: window.chartColors.red,
        data: GenerateData(HongKong_Days, HongKong_DayCumulativeDiseaseInducedDeaths),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DayAsymptomaticIndividuals_Dataset = {
        label: 'Asymptomatic Individuals',
        backgroundColor: color(window.chartColors.red).alpha(0.5).rgbString(),
        borderColor: window.chartColors.red,
        data: GenerateData(HongKong_Days, HongKong_DayAsymptomaticIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DaySymptomaticIndividuals_Dataset = {
        label: 'Symptomatic Individuals',
        backgroundColor: color(window.chartColors.orange).alpha(0.5).rgbString(),
        borderColor: window.chartColors.orange,
        data: GenerateData(HongKong_Days, HongKong_DaySymptomaticIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DayIsolatedIndividuals_Dataset = {
        label: 'Isolated Individuals',
        backgroundColor: color(window.chartColors.yellow).alpha(0.5).rgbString(),
        borderColor: window.chartColors.yellow,
        data: GenerateData(HongKong_Days, HongKong_DayIsolatedIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DayQuarantinedIndividuals_Dataset = {
        label: 'Quarantined Individuals',
        backgroundColor: color(window.chartColors.green).alpha(0.5).rgbString(),
        borderColor: window.chartColors.green,
        data: GenerateData(HongKong_Days, HongKong_DayQuarantinedIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DayRecoveredIndividuals_Dataset = {
        label: 'Recovered Individuals',
        backgroundColor: color(window.chartColors.blue).alpha(0.5).rgbString(),
        borderColor: window.chartColors.blue,
        data: GenerateData(HongKong_Days, HongKong_DayRecoveredIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HongKong_DaySusceptibleIndividuals_Dataset = {
        label: 'Susceptible Individuals',
        backgroundColor: color(window.chartColors.purple).alpha(0.5).rgbString(),
        borderColor: window.chartColors.purple,
        data: GenerateData(HongKong_Days, HongKong_DaySusceptibleIndividuals),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    const HongKong_Configuration = {
        data: {
            datasets: [
                HongKong_DayAsymptomaticIndividuals_Dataset,
                HongKong_DaySymptomaticIndividuals_Dataset,
                HongKong_DayIsolatedIndividuals_Dataset,
                HongKong_DayQuarantinedIndividuals_Dataset,
                HongKong_DayRecoveredIndividuals_Dataset,
                HongKong_DaySusceptibleIndividuals_Dataset]
        },
        options: {
            animation: {
                duration: 0
            },
            scales: {
                x: {
                    type: 'time',
                    distribution: 'series',
                    scaleLabel: {
                        display: true,
                        labelString: 'Day'
                    },
                    offset: true,
                    ticks: {
                        major: {
                            enabled: true,
                        },
                        fontStyle: 'bold',
                        source: 'data',
                        autoSkip: true,
                        autoSkipPadding: 75,
                        maxRotation: 0,
                        sampleSize: 200
                    },
                },
                y: {
                    type: 'logarithmic',
                    gridLines: {
                        drawBorder: false
                    },
                    scaleLabel: {
                        display: true,
                        labelString: 'Number of People'
                    }
                }
            },
            title: {
                display: true,
                text: 'HongKong'
            },
            tooltips: {
                intersect: false,
                mode: 'index',
                callbacks: {
                    label: function (tooltipItem, myData) {
                        let label = myData.datasets[tooltipItem.datasetIndex].label || '';
                        if (label) {
                            label += ': ';
                        }
                        label += parseFloat(tooltipItem.value).toFixed(2);
                        return label;
                    }
                }
            }
        }
    };

    const HongKong_Chart = new Chart(
        HongKong_Context,
        HongKong_Configuration);
</script>