@model C19M.UI.Models.Gumel2004

@{
    ViewBag.Title = "Gumel2004";
}

<head>
    <title>Line Chart</title>
    <script src="~/Scripts/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@1.15.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@0.2.0"></script>
    <script src="~/Scripts/utils.js"></script>
    <style>
        canvas {
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }
    </style>
</head>

<div>
    <canvas id="canvas"></canvas>
</div>
<script>
    function GenerateData(days, values) {
        let data = [];

        let i = 0;

        for (; i < days.length; i++) {
            data.push(
                {
                    x: luxon.DateTime.fromFormat(days[i], 'LLL dd yyyy').valueOf(),
                    y: values[i]
                });
        }

        return data;
    }

    const ctx = document.getElementById('canvas').getContext('2d');
    ctx.canvas.width = 1000;
    ctx.canvas.height = 300;

    var Beijing_Days = @Html.Raw(Json.Encode(Model.Days));
    var Beijing_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.Beijing_DayCumulativeDiseaseInducedDeaths_Array));

    var GreaterTorontoArea_Days = @Html.Raw(Json.Encode(Model.Days));
    var GreaterTorontoArea_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.GreaterTorontoArea_DayCumulativeDiseaseInducedDeaths_Array));

    var HongKong_Days = @Html.Raw(Json.Encode(Model.Days));
    var HongKong_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.HongKong_DayCumulativeDiseaseInducedDeaths_Array));

    var Singapore_Days = @Html.Raw(Json.Encode(Model.Days));
    var Singapore_DayCumulativeDiseaseInducedDeaths = @Html.Raw(Json.Encode(Model.Singapore_DayCumulativeDiseaseInducedDeaths_Array));

    const color = Chart.helpers.color;

    var Beijing_ds = {
        label: 'Beijing',
        backgroundColor: color(window.chartColors.orange).alpha(0.5).rgbString(),
        borderColor: window.chartColors.orange,
        data: GenerateData(Beijing_Days, Beijing_DayCumulativeDiseaseInducedDeaths),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var GTA_ds = {
        label: 'GTA',
        backgroundColor: color(window.chartColors.green).alpha(0.5).rgbString(),
        borderColor: window.chartColors.green,
        data: GenerateData(GreaterTorontoArea_Days, GreaterTorontoArea_DayCumulativeDiseaseInducedDeaths),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var HK_ds = {
        label: 'Hong Kong',
        backgroundColor: color(window.chartColors.red).alpha(0.5).rgbString(),
        borderColor: window.chartColors.red,
        data: GenerateData(HongKong_Days, HongKong_DayCumulativeDiseaseInducedDeaths),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    var Singapore_ds = {
        label: 'Singapore',
        backgroundColor: color(window.chartColors.blue).alpha(0.5).rgbString(),
        borderColor: window.chartColors.blue,
        data: GenerateData(Singapore_Days, Singapore_DayCumulativeDiseaseInducedDeaths),
        type: 'line',
        pointRadius: 0,
        fill: false,
        lineTension: 0,
        borderWidth: 2
    };

    const cfg = {
        data: {
            datasets: [Beijing_ds, GTA_ds, HK_ds, Singapore_ds]
        },
        options: {
            animation: {
                duration: 0
            },
            scales: {
                x: {
                    type: 'time',
                    distribution: 'series',
                    offset: true,
                    ticks: {
                        major: {
                            enabled: true,
                        },
                        fontStyle: 'bold',
                        source: 'data',
                        autoSkip: true,
                        autoSkipPadding: 75,
                        maxRotation: 0,
                        sampleSize: 200
                    },
                },
                y: {
                    type: 'linear',
                    gridLines: {
                        drawBorder: false
                    },
                    scaleLabel: {
                        display: true,
                        labelString: 'Cumulative Number of Disease-Induced Deaths'
                    }
                }
            },
            tooltips: {
                intersect: false,
                mode: 'index',
                callbacks: {
                    label: function (tooltipItem, myData) {
                        let label = myData.datasets[tooltipItem.datasetIndex].label || '';
                        if (label) {
                            label += ': ';
                        }
                        label += parseFloat(tooltipItem.value).toFixed(2);
                        return label;
                    }
                }
            }
        }
    };

    const chart = new Chart(ctx, cfg);
</script>